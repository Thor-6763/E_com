{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}